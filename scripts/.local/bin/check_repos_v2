#!/usr/bin/env bash
PATH=/home/usuario/.local/bin:/usr/bin

check() {
  for d in "$@"; do
    if [ -d $d ]; then
      cd $d
      if [ -n "$(git status -s)" ]; then
        notify-send -i info -t 2000 "Commiting $d"
        git add .
        git commit -m "Automatic commit: $(date +'%d-%b-%y %H:%M:%S')"
        git push
      fi
      cd ..
    fi
  done
}

cd "$HOME"
check dotfiles notes uepb 2>/dev/null
